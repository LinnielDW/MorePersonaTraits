<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <WeaponTraitDef>
        <defName>MPT_OnHitPlague</defName>
        <label>plague bringer</label>
        <description>This weapon revels in the art of slow and agonizing death. Upon hitting a target, this weapon has a chance to apply/increase the target's plague.</description>
        <commonality>0.5</commonality>
        <marketValueOffset>400</marketValueOffset>
        <descriptionHyperlinks>
            <HediffDef>Plague</HediffDef>
        </descriptionHyperlinks>
        <modExtensions>
            <li Class="MorePersonaTraits.Extensions.WeaponTraitOnHitExtension">
                <OnHitWorkers>
                    <li Class="MorePersonaTraits.WorkerClasses.OnHitWorkerClasses.OnHitWorker_ApplyHediff">
                        <HediffDef>Plague</HediffDef>
                        <ProcMagnitude>0.15</ProcMagnitude>
                        <ProcChance>0.35</ProcChance>
                    </li>
                </OnHitWorkers>
            </li>
        </modExtensions>
    </WeaponTraitDef>
    
    <WeaponTraitDef>
        <defName>MPT_OnHitPlagueSelf</defName>
        <label>plague magnet</label>
        <description>This weapon's persona seems to attract the most exotic of baterium at the most inopportune times. Upon hitting a target, there is a small chance that the user will contract the plague.</description>
        <commonality>0.5</commonality>
        <marketValueOffset>-800</marketValueOffset>
        <descriptionHyperlinks>
            <HediffDef>Plague</HediffDef>
        </descriptionHyperlinks>
        <modExtensions>
            <li Class="MorePersonaTraits.Extensions.WeaponTraitOnHitExtension">
                <OnHitWorkers>
                    <li Class="MorePersonaTraits.WorkerClasses.OnHitWorkerClasses.OnHitWorker_ApplyHediff">
                        <HediffDef>Plague</HediffDef>
                        <ProcMagnitude>0.02</ProcMagnitude>
                        <ProcChance>0.02</ProcChance>
                        <TargetSelf>true</TargetSelf>
                    </li>
                </OnHitWorkers>
            </li>
        </modExtensions>
    </WeaponTraitDef>

</Defs>