<Defs>
    <WeaponTraitDef ParentName="BondedWeaponTraitBase">
        <defName>MPT_BondedImmunePenoxycyline</defName>
        <label>penoxycylined</label>
        <description>This weapon's persona gives its bond permenant Penoxycyline effects so long as the bond holds. That being immunity to malaria, sleeping sickness, and the plague.</description>
        <marketValueOffset>300</marketValueOffset>
        <bondedHediffs>
            <li>MPT_HediffImmunePenoxycyline</li>
        </bondedHediffs>
        <exclusionTags>
            <li>MPT_Immune_Malaria</li>
            <li>MPT_Immune_SleepingSickness</li>
            <li>MPT_Immune_Plague</li>
        </exclusionTags>
    </WeaponTraitDef>
    <HediffDef>
        <defName>MPT_HediffImmunePenoxycyline</defName>
        <label>psychic penoxycyline</label>
        <description>My bonded weapon is providing me with immunity to new infections of malaria, plague and sleeping-sickness.</description>
        <descriptionHyperlinks>
            <WeaponTraitDef>MPT_BondedImmunePenoxycyline</WeaponTraitDef>
        </descriptionHyperlinks>
        <isBad>false</isBad>
        <stages>
            <li>
                <makeImmuneTo>
                    <li>Malaria</li>
                    <li>SleepingSickness</li>
                    <li>Plague</li>
                </makeImmuneTo>
            </li>
        </stages>
    </HediffDef>

