<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <WeaponTraitDef>
        <defName>MPT_BondedResearchUp</defName>
        <label>insightful</label>
        <description>This weapon's persona speaks long forgotten truths to its bond. The person bonded to it gains extra research speed so long as they are bonded.</description>
        <commonality>0.5</commonality>
        <marketValueOffset>700</marketValueOffset>
        <bondedHediffs>
            <li>MPT_HediffResearchUp</li>
        </bondedHediffs>
        <exclusionTags>
            <li>MPT_ResearchOffset</li>
            <li>NeverBond</li>
        </exclusionTags>
    </WeaponTraitDef>
    <HediffDef>
        <defName>MPT_HediffResearchUp</defName>
        <label>psychic truth</label>
        <description>Research speed is increased by the assistance of a bonded weapon.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statOffsets>
                    <ResearchSpeed>0.15</ResearchSpeed>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

    <WeaponTraitDef>
        <defName>MPT_BondedResearchDown</defName>
        <label>rambling</label>
        <description>This weapon's persona constantly rambles useless distractions into their bond's mind. The bonded pawn takes a -15% hit to their research speed so long as the bond holds.</description>
        <commonality>0.5</commonality>
        <marketValueOffset>-700</marketValueOffset>
        <bondedHediffs>
            <li>MPT_HediffResearchDown</li>
        </bondedHediffs>
        <exclusionTags>
            <li>MPT_ResearchOffset</li>
            <li>NeverBond</li>
        </exclusionTags>
    </WeaponTraitDef>
    <HediffDef>
        <defName>MPT_HediffResearchDown</defName>
        <label>psychic mental derailment</label>
        <description>Research speed is decreased by the pressence of a bonded weapon.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statOffsets>
                    <ResearchSpeed>-0.15</ResearchSpeed>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>
    
    <WeaponTraitDef>
        <defName>MPT_OnHitPlague</defName>
        <label>plague bringer</label>
        <description>This weapon revels in the art of slow and agonizing death. Upon hitting a target, has a 35% chance to apply/increase the target's plague by 15%.</description>
        <commonality>0.5</commonality>
        <marketValueOffset>500</marketValueOffset>
        <modExtensions>
            <li Class="MorePersonaTraits.Extensions.WeaponTraitOnHitExtension">
                <OnHitWorkerClass>MorePersonaTraits.OnHitWorkerClasses.OnHitWorker_ApplyHediffOnTarget</OnHitWorkerClass>
                <TargetThingHediff>Plague</TargetThingHediff>
                <ProcMagnitude>0.15</ProcMagnitude>
                <ProcChance>0.35</ProcChance>
            </li>
        </modExtensions>
    </WeaponTraitDef>

</Defs>