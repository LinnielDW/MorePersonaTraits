<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="ArtifactBase">
        <defName>MPT_BladelinkUncoder</defName>
        <label>Persona Weapon Bond Breaker</label>
        <description>A one-use psychic persona effector. The psychic surge destroys a weapon persona's connections, removing all memories of friendship, loyalties and severing its psychic bond.</description>
        <graphicData>
            <!--TODO: Make a different graphic-->
            <texPath>Things/Item/Artifact/PsychicAnimalPulser</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <stackLimit>1</stackLimit>
        <tradeNeverStack>true</tradeNeverStack>
        <tradeability>Sellable</tradeability>
        <useHitPoints>true</useHitPoints>
        <statBases>
            <MarketValue>1500</MarketValue>
            <MaxHitPoints>80</MaxHitPoints>
        </statBases>
        <drawGUIOverlay>false</drawGUIOverlay>
        <comps>
            <li Class="MorePersonaTraits.WorkerClasses.ItemWorkerClasses.CompProperties_TargetableSingleBladelink">
                <compClass>MorePersonaTraits.WorkerClasses.ItemWorkerClasses.CompTargetable_SingleBladelink</compClass>
                <RequiresBond>true</RequiresBond>
            </li>
            <!--TODO: experiment with sound to find a good one.-->
            <li Class="CompProperties_UseEffectArtifact">
                <sound>PsychicInsanityLanceCast</sound>
            </li>
            <li>
                <compClass>MorePersonaTraits.WorkerClasses.ItemWorkerClasses.CompTargetEffect_BladeDelinker</compClass>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="ArtifactBase">
        <defName>MPT_BladelinkReroller</defName>
        <label>Persona Weapon Reformatter</label>
        <description>A one-use psychic persona effector. The psychic surge completely overwhelms a weapon persona, destroying who they were and completely rerolling the traits of the weapon.</description>
        <graphicData>
            <!--TODO: Make a different graphic-->
            <texPath>Things/Item/Artifact/PsychicAnimalPulser</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <stackLimit>1</stackLimit>
        <tradeNeverStack>true</tradeNeverStack>
        <tradeability>Sellable</tradeability>
        <useHitPoints>true</useHitPoints>
        <statBases>
            <MarketValue>500</MarketValue>
            <MaxHitPoints>80</MaxHitPoints>
        </statBases>
        <drawGUIOverlay>false</drawGUIOverlay>
        <comps>
            <li Class="MorePersonaTraits.WorkerClasses.ItemWorkerClasses.CompProperties_TargetableSingleBladelink">
                <compClass>MorePersonaTraits.WorkerClasses.ItemWorkerClasses.CompTargetable_SingleBladelink</compClass>
            </li>
            <!--TODO: experiment with sound to find a good one.-->
            <li Class="CompProperties_UseEffectArtifact">
                <sound>PsychicInsanityLanceCast</sound>
            </li>
            <li>
                <compClass>MorePersonaTraits.WorkerClasses.ItemWorkerClasses.CompTargetEffect_BladeReroller</compClass>
            </li>
        </comps>
    </ThingDef>
</Defs>